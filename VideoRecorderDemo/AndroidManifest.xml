<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stefan.anca.demo.videorecorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stefan.anca.demo.videorecorder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stefan.anca.demo.videorecorder.DemoRecorder1"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.stefan.anca.demo.videorecorder.DemoRecorder2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.stefan.anca.demo.videorecorder.DemoRecorder3"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.stefan.anca.demo.videorecorder.DemoRecorder4"
            android:screenOrientation="portrait" />
    </application>

</manifest>